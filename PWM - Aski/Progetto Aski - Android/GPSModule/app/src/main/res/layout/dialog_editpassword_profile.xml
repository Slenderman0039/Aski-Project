<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="22sp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Modifica Password"
        android:id="@+id/successo"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Inserisci qui la nuova password. Utilizza il tasto conferma per cambiarla altrimenti annulla."
        android:textSize="15dp"
        android:layout_marginHorizontal="30dp"
        android:textColor="#9d9d9d"
        android:fontFamily="@font/poppins_medium"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_password"
        android:layout_marginHorizontal="30dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:boxCornerRadiusBottomEnd="17dp"
        app:boxCornerRadiusTopEnd="17dp"
        app:boxStrokeWidth="0dp"
        app:boxBackgroundColor="#d9d9d9"
        app:boxCornerRadiusBottomStart="17dp"
        app:boxCornerRadiusTopStart="17dp"
        android:hint="Password"
        android:maxHeight="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:startIconDrawable="@drawable/password_icon"
        app:startIconTint="@color/Black">

        <com.google.android.material.textfield.TextInputEditText
            android:inputType="textPassword"
            android:id="@+id/password_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>

