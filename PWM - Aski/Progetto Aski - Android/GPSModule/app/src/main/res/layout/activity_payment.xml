<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".map.navbar.payment.PaymentActivity"
    android:background="#F3F6F8">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
            android:id="@+id/title4"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/poppins_semibold"
            android:paddingBottom="10dp"
            android:text="Metodi di Pagamento"
            android:textSize="20dp" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="top"
            android:layout_marginHorizontal="18dp"
            android:background="@android:color/darker_gray" />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="50dp">
            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="12dp"
                android:text="PREDEFINITO:"/>
            <LinearLayout
                android:id="@+id/contoaski"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:background="@drawable/rounded"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.2"
                    android:padding="3dp"
                    app:srcCompat="@drawable/icon_aski" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_medium"
                    android:paddingLeft="10dp"
                    android:gravity="center|left"
                    android:text="Conto Aski"
                    android:textAlignment="gravity"
                    android:textColor="#6C63FF"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/saldo"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:paddingRight="15dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="{0.0} â‚¬"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/Check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="0"
                    android:fontFamily="@font/poppins_black_italic"
                    android:text="&#x2713;"
                    android:textColor="#4CAF50"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/rounded"
                android:layout_marginTop="40dp"
                >

                <LinearLayout
                    android:id="@+id/addcard1"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/cardicon1"
                        android:layout_width="30dp"
                        android:layout_gravity="center"
                        android:layout_height="30dp"
                        android:layout_weight="0.2"
                        android:padding="3dp"
                        app:srcCompat="@drawable/card_icon_small" />

                    <TextView
                        android:id="@+id/card1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:text="Aggiungi una Carta"
                        android:fontFamily="@font/poppins_semibold"
                        android:paddingLeft="10dp"
                        android:textColor="#6C63FF"
                        android:textAlignment="gravity" />
                    <TextView
                        android:id="@+id/Check1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_weight="0"
                        android:fontFamily="@font/poppins_black_italic"
                        android:text="&#x2713;"
                        android:textColor="#4CAF50"
                        android:textSize="20sp"
                        android:visibility="invisible" />
                </LinearLayout>

                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="top"
                    android:layout_marginHorizontal="10dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:id="@+id/addcard2"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/cardicon2"
                        android:layout_width="30dp"
                        android:layout_gravity="center"
                        android:layout_height="30dp"
                        android:layout_weight="0.2"
                        android:padding="3dp"
                        app:srcCompat="@drawable/card_icon_small" />

                    <TextView
                        android:id="@+id/card2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:text="Aggiungi una Carta"
                        android:fontFamily="@font/poppins_semibold"
                        android:paddingLeft="10dp"
                        android:textColor="#6C63FF"
                        android:textAlignment="gravity" />

                    <TextView
                        android:id="@+id/Check2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_weight="0"
                        android:fontFamily="@font/poppins_black_italic"
                        android:text="&#x2713;"
                        android:textColor="#4CAF50"
                        android:textSize="20sp"
                        android:visibility="invisible" />
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="12dp"
                android:text="RICARICA CONTO:"/>
            <LinearLayout
                android:id="@+id/reload"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:background="@drawable/rounded"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/logo1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.2"
                    android:padding="3dp"
                    app:srcCompat="@drawable/icon_aski" />

                <TextView
                    android:id="@+id/ricarica"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_medium"
                    android:paddingLeft="10dp"
                    android:gravity="center|left"
                    android:text="Ricarica il tuo conto aski"
                    android:textAlignment="gravity"
                    android:textColor="#6C63FF"
                    android:textSize="16sp" />



                <TextView
                    android:id="@+id/ricaricasymbol"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="0"
                    android:fontFamily="@font/poppins_black_italic"
                    android:text="&gt;"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </LinearLayout>
        </LinearLayout>

            </ScrollView>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:background="@drawable/rounded_menu_bottom"
            >

            <LinearLayout
                android:id="@+id/layout_general_close"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:visibility="visible"
                android:layout_gravity="top"
                android:orientation="horizontal">
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />
                <LinearLayout
                    android:id="@+id/layout_close_bottom"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:visibility="visible"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:padding="9dp"
                    android:background="@drawable/rounded_menu_bottom_close"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/close_icon" />

                </LinearLayout>

            </LinearLayout>

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragmentContainerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:name="it.am.gpsmodule.map.navbar.payment.fragments.AddCard"
                tools:layout="@layout/fragment_add_card" />
        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>