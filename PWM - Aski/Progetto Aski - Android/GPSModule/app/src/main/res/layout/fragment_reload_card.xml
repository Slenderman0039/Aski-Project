<?xml version="1.0" encoding="utf-8"?>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            tools:context=".map.navbar.payment.fragments.ReloadCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="16dp"
                    android:text="TAGLIO RICARICA:"/>

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/layout5"
                        android:layout_marginRight="15dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:orientation="vertical"
                        android:background="@drawable/rounded_steps">
                    <TextView
                        android:gravity="center"
                        android:fontFamily="@font/montserrat_bold"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/Black"
                        android:text="5€"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout10"
                        android:layout_marginRight="15dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:orientation="vertical"
                        android:background="@drawable/rounded_steps">
                        <TextView
                            android:gravity="center"
                            android:fontFamily="@font/montserrat_bold"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/Black"
                            android:text="10€"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout20"
                        android:layout_marginRight="15dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:orientation="vertical"
                        android:background="@drawable/rounded_steps">
                        <TextView
                            android:gravity="center"
                            android:fontFamily="@font/montserrat_bold"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/Black"
                            android:text="20€"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout50"
                        android:layout_marginRight="15dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:orientation="vertical"
                        android:background="@drawable/rounded_steps">
                        <TextView
                            android:gravity="center"
                            android:fontFamily="@font/montserrat_bold"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/Black"
                            android:text="50€"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout100"
                        android:layout_marginRight="15dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:orientation="vertical"
                        android:background="@drawable/rounded_steps">
                        <TextView
                            android:gravity="center"
                            android:fontFamily="@font/montserrat_bold"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/Black"
                            android:text="100€"/>
                    </LinearLayout>

                </LinearLayout>
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="16dp"
                    android:text="CARTA:"/>

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_marginLeft="30dp"
                        android:id="@+id/layout_carta"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="CARTA"
                        android:maxHeight="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:boxCornerRadiusBottomEnd="17dp"
                        app:boxCornerRadiusTopEnd="17dp"
                        app:boxStrokeWidth="0dp"
                        app:boxBackgroundColor="#d9d9d9"
                        app:boxCornerRadiusBottomStart="17dp"
                        app:boxCornerRadiusTopStart="17dp"
                        app:startIconDrawable="@drawable/card_icon"
                        app:startIconTint="@color/Black">

                        <com.google.android.material.textfield.TextInputEditText
                            android:inputType="numberSigned"
                            android:id="@+id/carta"
                            android:focusable="false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_marginLeft="30dp"
                        android:id="@+id/layout_cvv"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="CVV"
                        android:maxHeight="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:boxCornerRadiusBottomEnd="17dp"
                        app:boxCornerRadiusTopEnd="17dp"
                        app:boxStrokeWidth="0dp"
                        app:boxBackgroundColor="#d9d9d9"
                        app:boxCornerRadiusBottomStart="17dp"
                        app:boxCornerRadiusTopStart="17dp"
                        app:startIconDrawable="@drawable/cvv_icon"
                        app:startIconTint="@color/Black">

                        <com.google.android.material.textfield.TextInputEditText
                            android:inputType="numberSigned"
                            android:id="@+id/cvv"
                            android:maxLength="3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
                <Button
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:id="@+id/paga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PAGA ORA"
                    android:backgroundTint="@color/Green"/>
            </LinearLayout>

        </LinearLayout>
